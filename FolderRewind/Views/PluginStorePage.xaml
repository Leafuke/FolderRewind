<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.PluginStorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:plugins="using:FolderRewind.Services.Plugins"
    mc:Ignorable="d">

    <ScrollViewer Padding="16">
        <StackPanel Spacing="12">
            <TextBlock x:Uid="PluginStorePage_Title" Style="{ThemeResource TitleTextBlockStyle}"/>
            <TextBlock x:Uid="PluginStorePage_Desc" Opacity="0.7" TextWrapping="Wrap"/>

            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Uid="PluginStorePage_RepoBox" Text="{x:Bind StoreRepo, Mode=TwoWay}"/>
                <Button x:Uid="PluginStorePage_Load" Grid.Column="1" VerticalAlignment="Bottom" Click="OnLoadClick" IsEnabled="{x:Bind CanLoad, Mode=OneWay}"/>
            </Grid>

            <ProgressRing IsActive="{x:Bind IsLoading, Mode=OneWay}" Visibility="{x:Bind IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisConverter}}" Width="28" Height="28"/>

            <TextBlock x:Uid="PluginStorePage_EmptyRepoHint" Opacity="0.7" Visibility="{x:Bind EmptyRepoHintVisibility, Mode=OneWay}"/>

            <ListView ItemsSource="{x:Bind Assets, Mode=OneWay}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="plugins:PluginStoreAssetItem">
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Spacing="4">
                                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="{x:Bind SizeDisplay}" Opacity="0.7"/>
                                    <TextBlock Text="{x:Bind Status}" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>

                            <Button x:Uid="PluginStorePage_Install" Grid.Column="1" Click="OnInstallClick" Tag="{x:Bind}" IsEnabled="{x:Bind CanInstall, Mode=OneWay}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</Page>
