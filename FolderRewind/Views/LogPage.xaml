<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.LogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FolderRewind.Models"
    xmlns:local="using:FolderRewind.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <local:LogLevelToBrushConverter x:Key="LogLevelBrushConverter" />
        <Thickness x:Key="LogCardPadding">12,10,12,12</Thickness>
    </Page.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <StackPanel Grid.Row="0" Padding="24,16,24,8" Spacing="4">
            <TextBlock Text="日志中心" Style="{ThemeResource TitleTextBlockStyle}" />
            <TextBlock Text="查看、搜索、导出应用日志" Opacity="0.7" />
        </StackPanel>

        <Grid Grid.Row="1" Padding="24,0" ColumnSpacing="12" RowSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12" MinWidth="240" VerticalAlignment="Center">
                <ComboBox x:Name="LevelFilter" Width="120" Margin="0,4,0,0" SelectionChanged="OnLevelChanged" SelectedIndex="0">
                    <ComboBoxItem Content="全部级别" Tag="All" />
                    <ComboBoxItem Content="信息" Tag="Info" />
                    <ComboBoxItem Content="警告" Tag="Warning" />
                    <ComboBoxItem Content="错误" Tag="Error" />
                    <ComboBoxItem Content="调试" Tag="Debug" />
                </ComboBox>

                <TextBox x:Name="SearchBox" Width="200" Height="33" PlaceholderText="搜索关键字" TextChanged="OnKeywordChanged" />

                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <TextBlock Text="实时刷新" VerticalAlignment="Center" FontSize="14" Opacity="0.8"/>
                    <ToggleSwitch x:Name="LiveToggle" IsOn="True" Toggled="OnLiveToggled" OnContent="" OffContent="" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <TextBlock Text="自动滚动" VerticalAlignment="Center" FontSize="14" Opacity="0.8"/>
                    <ToggleSwitch x:Name="AutoScrollToggle" IsOn="True" OnContent="" OffContent="" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="复制选中" Click="OnCopyClick" />
                <Button Content="清空" Click="OnClearClick" />
                <Button Content="打开日志文件夹" Click="OnOpenFolderClick" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Padding="24,8,24,0">
            <ListView x:Name="LogList"
                      ItemsSource="{x:Bind FilteredEntries, Mode=OneWay}"
                      SelectionMode="Extended"
                      IsMultiSelectCheckBoxEnabled="True"
                      IsItemClickEnabled="False"
                      Padding="0,0,0,20">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="0,0,0,8" />
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="MinHeight" Value="0" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:LogEntry">
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="{StaticResource LogCardPadding}">
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*" ColumnSpacing="12" RowSpacing="6">
                                <StackPanel Orientation="Horizontal" Spacing="8" Grid.ColumnSpan="2">
                                    <Rectangle Width="8" Height="24" RadiusX="4" RadiusY="4"
                                               Fill="{Binding Level, Converter={StaticResource LogLevelBrushConverter}}" />
                                    <TextBlock Text="{Binding Timestamp}" FontFamily="Consolas" Opacity="0.7" />
                                    <Border CornerRadius="6" Padding="8,2"
                                            Background="{Binding Level, Converter={StaticResource LogLevelBrushConverter}, ConverterParameter=background}"
                                            BorderBrush="{Binding Level, Converter={StaticResource LogLevelBrushConverter}}"
                                            BorderThickness="1">
                                        <TextBlock Text="{x:Bind Level}" FontWeight="SemiBold" />
                                    </Border>
                                    <TextBlock Text="{x:Bind Source}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{x:Bind Message}" TextWrapping="WrapWholeWords" FontSize="14" />
                                <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{x:Bind Exception}" TextWrapping="WrapWholeWords"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" Opacity="0.85"
                                   Visibility="{Binding Exception, Converter={StaticResource BoolToVisInvertConverter}}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Row="3" Padding="24,8,24,16" ColumnDefinitions="*,Auto" VerticalAlignment="Center">
            <TextBlock Text="最新日志自动保存在本地，可在设置中关闭。" Opacity="0.6" />
            <Button Grid.Column="1" Content="打开当前日志文件" Click="OnOpenFileClick" />
        </Grid>
    </Grid>
</Page>
