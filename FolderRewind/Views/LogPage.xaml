<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.LogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FolderRewind.Models"
    xmlns:local="using:FolderRewind.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <StackPanel Grid.Row="0" Padding="24,16,24,8" Spacing="4">
            <TextBlock Text="日志中心" Style="{ThemeResource TitleTextBlockStyle}" />
            <TextBlock Text="查看、搜索、导出应用日志" Opacity="0.7" />
        </StackPanel>

        <Grid Grid.Row="1" Padding="24,0" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <ComboBox x:Name="LevelFilter" Width="150" SelectionChanged="OnLevelChanged" SelectedIndex="0">
                    <ComboBoxItem Content="全部级别" Tag="All" />
                    <ComboBoxItem Content="信息" Tag="Info" />
                    <ComboBoxItem Content="警告" Tag="Warning" />
                    <ComboBoxItem Content="错误" Tag="Error" />
                    <ComboBoxItem Content="调试" Tag="Debug" />
                </ComboBox>

                <TextBox x:Name="SearchBox" Width="220" PlaceholderText="搜索关键字" TextChanged="OnKeywordChanged" />

                <ToggleSwitch x:Name="LiveToggle" Header="实时刷新" IsOn="True" Toggled="OnLiveToggled" />
                <ToggleSwitch x:Name="AutoScrollToggle" Header="自动滚动" IsOn="True" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                <Button Content="复制选中" Click="OnCopyClick" />
                <Button Content="清空" Click="OnClearClick" />
                <Button Content="打开日志文件夹" Click="OnOpenFolderClick" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Padding="20,8,20,0">
            <ListView x:Name="LogList"
                      ItemsSource="{x:Bind FilteredEntries, Mode=OneWay}"
                      SelectionMode="Extended"
                      IsMultiSelectCheckBoxEnabled="True"
                      IsItemClickEnabled="False">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:LogEntry">
                        <StackPanel Spacing="4" Padding="8,6" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="6">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{Binding Timestamp}" FontFamily="Consolas" Opacity="0.7" />
                                <Border CornerRadius="4" Padding="6,2" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                                    <TextBlock Text="{x:Bind Level}" FontWeight="SemiBold" />
                                </Border>
                                <TextBlock Text="{x:Bind Source}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                            <TextBlock Text="{x:Bind Message}" TextWrapping="WrapWholeWords" />
                            <TextBlock Text="{x:Bind Exception}" TextWrapping="WrapWholeWords" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Row="3" Padding="24,8,24,16" ColumnDefinitions="*,Auto" VerticalAlignment="Center">
            <TextBlock Text="最新日志自动保存在本地，可在设置中关闭。" Opacity="0.6" />
            <Button Grid.Column="1" Content="打开当前日志文件" Click="OnOpenFileClick" />
        </Grid>
    </Grid>
</Page>
