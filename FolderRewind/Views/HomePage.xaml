<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FolderRewind.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="24">
        <StackPanel Spacing="0">

            <!-- 第一部分：收藏的文件夹 -->
            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE735;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <TextBlock x:Uid="HomePage_FavoriteFolders" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </StackPanel>

                <!-- 绑定到 Favorites 集合 -->
                <GridView ItemsSource="{x:Bind FavoriteFoldersView}" 
                          SelectionMode="None" 
                          IsItemClickEnabled="False">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="MinWidth" Value="0"/>
                            <Setter Property="MinHeight" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid ItemWidth="320" ItemHeight="120" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:ManagedFolder">
                            <Border Width="300" Height="100" Margin="0,0,12,12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Translation="0,0,16">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>

                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="12"
                                        Padding="12"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Width="300"
                                        Height="100"
                                        Click="OnFavoriteCardClick">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <FontIcon Glyph="&#xE8B7;" FontSize="24" Foreground="{ThemeResource SystemControlForegroundAccentBrush}" VerticalAlignment="Center"/>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                            <TextBlock Text="{x:Bind DisplayName}" Style="{ThemeResource BodyStrongTextBlockStyle}" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                                            <TextBlock Text="{x:Bind FullPath}" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                                            <TextBlock Text="{x:Bind LastBackupTime}" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                                        </StackPanel>

                                        <Button Grid.Column="2" Padding="6" Background="Transparent" BorderThickness="0" 
                                                Click="OnQuickBackupClick" x:Uid="HomePage_QuickBackupButton" VerticalAlignment="Center">
                                            <FontIcon Glyph="&#xE896;" FontSize="16"/>
                                        </Button>
                                    </Grid>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!-- 空状态提示 -->
                <TextBlock x:Uid="HomePage_NoFavoriteFolders" Opacity="0.5" FontStyle="Italic"
                           Visibility="{x:Bind IsFavoritesEmpty, Mode=OneWay, Converter={StaticResource BoolToVisConverter}}"/>
            </StackPanel>

            <!-- 第二部分：配置概览 -->
            <StackPanel Spacing="12">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                        <TextBlock x:Uid="HomePage_ConfigOverview" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                        <TextBlock x:Uid="HomePage_SortLabel" Opacity="0.7"/>
                        <ComboBox x:Name="SortCombo" MinWidth="160" SelectionChanged="OnSortModeChanged">
                            <ComboBoxItem Tag="NameAsc" x:Uid="HomePage_Sort_NameAsc"/>
                            <ComboBoxItem Tag="NameDesc" x:Uid="HomePage_Sort_NameDesc"/>
                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="2" HorizontalAlignment="Right" Style="{ThemeResource AccentButtonStyle}" Click="OnAddConfigClick">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;"/>
                            <TextBlock x:Uid="HomePage_NewConfig"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <GridView x:Name="ConfigGridView" 
                          ItemsSource="{x:Bind ConfigsView, Mode=OneWay}"
                          SelectionMode="None" 
                          IsItemClickEnabled="False">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="MinWidth" Value="0"/>
                            <Setter Property="MinHeight" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid ItemWidth="320" ItemHeight="120" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:BackupConfig">
                            <Border Width="300" Height="100" Margin="0,0,12,12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Translation="0,0,16">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>

                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="12"
                                        Padding="12"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Width="300"
                                        Height="100"
                                        Click="OnConfigCardClick">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Width="40" Height="40" CornerRadius="20" Background="{ThemeResource LayerFillColorAltBrush}" VerticalAlignment="Center">
                                            <FontIcon Glyph="{x:Bind IconGlyph}" FontSize="20" Foreground="{ThemeResource SystemControlForegroundAccentBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                            <TextBlock Text="{x:Bind Name}" Style="{ThemeResource BodyStrongTextBlockStyle}" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                                            <TextBlock Text="{x:Bind DestinationPath}" Style="{ThemeResource CaptionTextBlockStyle}" Opacity="0.6" TextTrimming="CharacterEllipsis" TextAlignment="Left"/>
                                            
                                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                                                 <StackPanel Orientation="Horizontal" Spacing="4" Opacity="0.7">
                                                    <FontIcon Glyph="&#xE8B7;" FontSize="12"/>
                                                    <TextBlock Text="{x:Bind SourceFolders.Count, TargetNullValue=0}" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="4" Opacity="0.7" Visibility="{x:Bind Automation.AutoBackupEnabled, Converter={StaticResource BoolToVisConverter}}">
                                                    <FontIcon Glyph="&#xE823;" FontSize="12"/>
                                                    <TextBlock x:Uid="HomePage_Config_Auto" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>

                                        <FontIcon Grid.Column="2" Glyph="&#xE76C;" FontSize="14" Opacity="0.4" VerticalAlignment="Center"/>
                                    </Grid>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
