<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FolderRewind.Models"
    xmlns:services="using:FolderRewind.Services"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <ScrollViewer Padding="36,24,36,36">
        <StackPanel Spacing="0">

            <!-- 第一部分：收藏的文件夹 -->
            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE735;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <TextBlock x:Uid="HomePage_FavoriteFolders" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </StackPanel>

                <!-- 绑定到 Favorites 集合 -->
                <GridView ItemsSource="{x:Bind FavoriteFoldersView}" 
                          SelectionMode="None" 
                          IsItemClickEnabled="False">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="MinWidth" Value="0"/>
                            <Setter Property="MinHeight" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid ItemWidth="340" ItemHeight="130" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:ManagedFolder">
                            <!-- 收藏文件夹卡片：带左侧强调色条 -->
                            <Border Width="320" Height="115" Margin="0,0,12,12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource OverlayCornerRadius}"
                                    Translation="0,0,16">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>

                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="{StaticResource OverlayCornerRadius}"
                                        Padding="0"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Width="320"
                                        Height="115"
                                        Click="OnFavoriteCardClick">
                                    <Grid>
                                        <!-- 左侧强调色条 -->
                                        <Rectangle Width="3" HorizontalAlignment="Left" 
                                                   RadiusX="1.5" RadiusY="1.5"
                                                   Fill="{ThemeResource AccentFillColorDefaultBrush}"
                                                   Margin="4,14"/>

                                        <!-- 主内容区域 -->
                                        <Grid Margin="16,12,12,12" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 圆形图标容器 -->
                                            <Border Width="40" Height="40" CornerRadius="20"
                                                    Background="{ThemeResource LayerFillColorAltBrush}"
                                                    VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE8B7;" FontSize="18" 
                                                          Foreground="{ThemeResource SystemControlForegroundAccentBrush}" 
                                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{x:Bind DisplayName}" 
                                                           Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                                           TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" 
                                                           MaxLines="1" TextAlignment="Left" 
                                                           services:AutoToolTipService.IsEnabled="True"/>
                                                <TextBlock Text="{x:Bind FullPath}" 
                                                           Style="{ThemeResource CaptionTextBlockStyle}" 
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                                           TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" 
                                                           MaxLines="1" TextAlignment="Left" 
                                                           services:AutoToolTipService.IsEnabled="True"/>
                                                <!-- 备份时间，附带图标标识 -->
                                                <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,2,0,0">
                                                    <FontIcon Glyph="&#xE823;" FontSize="11" 
                                                              Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                    <TextBlock Text="{x:Bind LastBackupTime}" 
                                                               Style="{ThemeResource CaptionTextBlockStyle}" 
                                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}" 
                                                               TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" MaxLines="1"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- 快速备份按钮 -->
                                            <Button Grid.Column="2" Padding="8" Background="Transparent" BorderThickness="0" 
                                                    Click="OnQuickBackupClick" x:Uid="HomePage_QuickBackupButton" VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE896;" FontSize="16"/>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!-- 空状态提示 -->
                <TextBlock x:Uid="HomePage_NoFavoriteFolders" Margin="0,0,0,15" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontStyle="Italic"
                           Visibility="{x:Bind IsFavoritesEmpty, Mode=OneWay, Converter={StaticResource BoolToVisConverter}}"/>
            </StackPanel>

            <!-- 第二部分：配置概览 -->
            <StackPanel Spacing="12" Margin="0,28,0,0">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                        <TextBlock x:Uid="HomePage_ConfigOverview" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                        <TextBlock x:Uid="HomePage_SortLabel" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <ComboBox x:Name="SortCombo" MinWidth="160" SelectionChanged="OnSortModeChanged">
                            <ComboBoxItem Tag="NameAsc" x:Uid="HomePage_Sort_NameAsc"/>
                            <ComboBoxItem Tag="NameDesc" x:Uid="HomePage_Sort_NameDesc"/>
                            <ComboBoxItem Tag="LastBackupDesc" x:Uid="HomePage_Sort_LastBackup"/>
                            <ComboBoxItem Tag="LastModifiedDesc" x:Uid="HomePage_Sort_LastModified"/>
                        </ComboBox>
                    </StackPanel>

                    <Button Grid.Column="2" HorizontalAlignment="Right" Style="{ThemeResource AccentButtonStyle}" Click="OnAddConfigClick">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;"/>
                            <TextBlock x:Uid="HomePage_NewConfig"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <GridView x:Name="ConfigGridView" 
                          ItemsSource="{x:Bind ConfigsView, Mode=OneWay}"
                          SelectionMode="None" 
                          IsItemClickEnabled="False">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="MinWidth" Value="0"/>
                            <Setter Property="MinHeight" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewItem">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid ItemWidth="340" ItemHeight="130" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:BackupConfig">
                            <!-- 配置卡片：带左侧强调色条和圆形图标 -->
                            <Border Width="320" Height="115" Margin="0,0,12,12"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="{StaticResource OverlayCornerRadius}"
                                    Translation="0,0,16">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>

                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="{StaticResource OverlayCornerRadius}"
                                        Padding="0"
                                        HorizontalContentAlignment="Stretch"
                                        VerticalContentAlignment="Stretch"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Width="320"
                                        Height="115"
                                        Click="OnConfigCardClick"
                                        RightTapped="OnConfigCardRightTapped">
                                    <Button.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:Uid="HomePage_ContextMenu_BackupAll" Click="OnBackupAllFoldersClick">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE896;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem x:Uid="HomePage_ContextMenu_OpenDestination" Click="OnOpenDestinationClick">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE8DA;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem x:Uid="HomePage_ContextMenu_EditConfig" Click="OnEditConfigClick">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE70F;"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem x:Uid="HomePage_ContextMenu_DeleteConfig" Click="OnDeleteConfigClick">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon Glyph="&#xE74D;" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </Button.ContextFlyout>
                                    <Grid>
                                        <!-- 左侧强调色条 -->
                                        <Rectangle Width="3" HorizontalAlignment="Left" 
                                                   RadiusX="1.5" RadiusY="1.5"
                                                   Fill="{ThemeResource AccentFillColorDefaultBrush}"
                                                   Margin="4,14"/>

                                        <!-- 主内容区域 -->
                                        <Grid Margin="16,10,12,10" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                        
                                            <!-- 圆形配置图标 -->
                                            <Border Width="40" Height="40" CornerRadius="20" 
                                                    Background="{ThemeResource LayerFillColorAltBrush}" 
                                                    VerticalAlignment="Center">
                                                <FontIcon Glyph="{x:Bind IconGlyph}" FontSize="20" 
                                                          Foreground="{ThemeResource SystemControlForegroundAccentBrush}" 
                                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{x:Bind Name}" 
                                                           Style="{ThemeResource BodyStrongTextBlockStyle}" 
                                                           TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" 
                                                           MaxLines="1" TextAlignment="Left" 
                                                           services:AutoToolTipService.IsEnabled="True"/>
                                                <TextBlock Text="{x:Bind DestinationPath}" 
                                                           Style="{ThemeResource CaptionTextBlockStyle}" 
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                                           TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" 
                                                           MaxLines="1" TextAlignment="Left" 
                                                           services:AutoToolTipService.IsEnabled="True"/>
                                            
                                                <!-- 信息标签行 -->
                                                <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                                        <FontIcon Glyph="&#xE8B7;" FontSize="11" 
                                                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                        <TextBlock Text="{x:Bind SourceFolders.Count, TargetNullValue=0}" 
                                                                   Style="{ThemeResource CaptionTextBlockStyle}" 
                                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="4" 
                                                                Visibility="{x:Bind Automation.AutoBackupEnabled, Converter={StaticResource BoolToVisConverter}}">
                                                        <FontIcon Glyph="&#xE823;" FontSize="11" 
                                                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                        <TextBlock x:Uid="HomePage_Config_Auto" 
                                                                   Style="{ThemeResource CaptionTextBlockStyle}" 
                                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- 进入箭头 -->
                                            <FontIcon Grid.Column="2" Glyph="&#xE76C;" FontSize="14" 
                                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}" 
                                                      VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- 右下角配置类型标识图标 -->
                                        <!-- 加密配置：锁图标 -->
                                        <FontIcon Glyph="&#xE72E;" FontSize="12"
                                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                  HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                  Margin="0,0,8,6"
                                                  Visibility="{x:Bind IsEncrypted, Converter={StaticResource BoolToVisConverter}}"/>
                                        <!-- Minecraft Saves 配置：游戏手柄图标 -->
                                        <FontIcon Glyph="&#xE7FC;" FontSize="12"
                                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                  HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                  Margin="0,0,8,6"
                                                  Visibility="{x:Bind IsMinecraftConfig, Converter={StaticResource BoolToVisConverter}}"/>
                                    </Grid>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
