<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FolderRewind.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="32">
        <StackPanel Spacing="32">

            <!-- 第一部分：收藏的文件夹 -->
            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE735;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <TextBlock x:Uid="HomePage_FavoriteFolders" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </StackPanel>

                <!-- 绑定到 Favorites 集合 -->
                <GridView ItemsSource="{x:Bind FavoriteFoldersView}" 
                          SelectionMode="None" 
                          IsItemClickEnabled="True" 
                          ItemClick="OnFavoriteItemClick">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0,0,12,12"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:ManagedFolder">
                            <Grid Width="240" Height="100" CornerRadius="8">
                                <Grid x:Name="ShadowGrid" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Translation="0,0,8">
                                    <Grid.Shadow>
                                        <ThemeShadow />
                                    </Grid.Shadow>
                                    <Border CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="16">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <FontIcon Glyph="&#xE8B7;" FontSize="28" VerticalAlignment="Center" Margin="0,0,16,0" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                                <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                                <TextBlock Text="{x:Bind StatusText}" FontSize="12" Opacity="0.6" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <!-- 快速备份按钮 -->
                                            <Button Grid.Column="2" Padding="8" Background="Transparent" BorderThickness="0" 
                                                    Click="OnQuickBackupClick" x:Uid="HomePage_QuickBackupButton" VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE896;" FontSize="16"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>

                <!-- 空状态提示 -->
                <TextBlock x:Uid="HomePage_NoFavoriteFolders" Opacity="0.5" FontStyle="Italic"
                           Visibility="{x:Bind IsFavoritesEmpty, Mode=OneWay, Converter={StaticResource BoolToVisConverter}}"/>
            </StackPanel>

            <!-- 第二部分：配置概览 -->
            <StackPanel Spacing="12">
                <Grid>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                        <TextBlock x:Uid="HomePage_ConfigOverview" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" Style="{ThemeResource AccentButtonStyle}" Click="OnAddConfigClick">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;"/>
                            <TextBlock x:Uid="HomePage_NewConfig"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <GridView x:Name="ConfigGridView" 
                          ItemsSource="{x:Bind ConfigsView, Mode=OneWay}"
                          SelectionMode="None" 
                          IsItemClickEnabled="True" 
                          ItemClick="OnConfigClick">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="Margin" Value="0,0,16,16"/>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:BackupConfig">
                            <Grid Width="320" Height="140" CornerRadius="8">
                                <Grid Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Translation="0,0,8">
                                    <Grid.Shadow>
                                        <ThemeShadow />
                                    </Grid.Shadow>
                                    <Border CornerRadius="8" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Icon -->
                                                <Border Width="48" Height="48" CornerRadius="24" Background="{ThemeResource LayerFillColorAltBrush}" Margin="0,0,16,0">
                                                    <FontIcon Glyph="{x:Bind IconGlyph}" FontSize="24" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{x:Bind Name}" Style="{ThemeResource SubtitleTextBlockStyle}" TextTrimming="CharacterEllipsis"/>
                                                    <TextBlock Text="{x:Bind SummaryText}" FontSize="12" Opacity="0.6" TextTrimming="CharacterEllipsis" MaxLines="2"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Action / Status -->
                                            <Grid Grid.Row="1" Margin="0,12,0,0" VerticalAlignment="Bottom">
                                                <TextBlock Text="{x:Bind DestinationPath}" FontSize="11" Opacity="0.4" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                                <FontIcon Glyph="&#xE76C;" HorizontalAlignment="Right" FontSize="14" Opacity="0.4"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
