<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="using:H.NotifyIcon">

    <XamlUICommand x:Key="ShowHideWindowCommand"
                   Label="FolderRewind"
                   Description="Show or hide the window" />

    <XamlUICommand x:Key="QuitCommand"
                   Label="Exit"
                   Description="Exit FolderRewind" />

    <tb:TaskbarIcon
        x:Key="TrayIcon"
        ContextMenuMode="PopupMenu"
        IconSource="ms-appx:///Assets/logo.ico"
        LeftClickCommand="{StaticResource ShowHideWindowCommand}"
        NoLeftClickDelay="True"
        ToolTipText="FolderRewind"
        Visibility="Visible">
        <tb:TaskbarIcon.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Text="Show / Hide"
                                Command="{StaticResource ShowHideWindowCommand}" />
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Exit"
                                Command="{StaticResource QuitCommand}" />
            </MenuFlyout>
        </tb:TaskbarIcon.ContextFlyout>
    </tb:TaskbarIcon>
</ResourceDictionary>
