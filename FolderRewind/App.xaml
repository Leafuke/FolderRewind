<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="FolderRewind.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderRewind"
    xmlns:converters="using:FolderRewind.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///Styles/TrayResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="FrameworkElement">
                <Setter Property="KeyboardAcceleratorPlacementMode" Value="Hidden" />
            </Style>

            <!-- 注册全局转换器 -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters:BoolToVisibilityInvertConverter x:Key="BoolToVisInvertConverter"/>
            <converters:BoolToStarIconConverter x:Key="BoolToStarIconConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:CountToStringConverter x:Key="CountToStringConverter"/>
            <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisConverter"/>

            <!-- ==================== 全局共享样式 ==================== -->
            
            <!-- 页面标题样式 -->
            <Style x:Key="PageTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
                <Setter Property="Margin" Value="0,24,0,24"/>
                <Setter Property="AutomationProperties.HeadingLevel" Value="Level1"/>
            </Style>
            
            <!-- 节标题样式 -->
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
                <Setter Property="Margin" Value="0,32,0,12"/>
                <Setter Property="AutomationProperties.HeadingLevel" Value="Level2"/>
            </Style>
            
            <!-- 描述文字样式 -->
            <Style x:Key="DescriptionTextStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            
            <!-- 标准卡片边框样式 -->
            <Style x:Key="StandardCardStyle" TargetType="Border">
                <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="{StaticResource OverlayCornerRadius}"/>
                <Setter Property="Padding" Value="16"/>
            </Style>

            <BitmapImage x:Key="QQGroup" UriSource="ms-appx:///Assets/qq_group_light.jpg" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
