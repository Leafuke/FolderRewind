<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="FolderRewind.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FolderRewind"
    xmlns:converters="using:FolderRewind.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 注册全局转换器 -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters:BoolToVisibilityInvertConverter x:Key="BoolToVisInvertConverter"/>
            <converters:BoolToStarIconConverter x:Key="BoolToStarIconConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:CountToStringConverter x:Key="CountToStringConverter"/>

            <!-- 定义一些常用的颜色或样式 -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#05FFFFFF" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
