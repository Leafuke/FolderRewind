<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FolderRewind.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="32">
        <StackPanel Spacing="32">

            <!-- 第一部分：收藏的文件夹 -->
            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE735;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <TextBlock x:Uid="HomePage_FavoriteFolders" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </StackPanel>

                <!-- 绑定到 Favorites 集合 -->
                <GridView ItemsSource="{x:Bind FavoriteFolders}" 
                          SelectionMode="None" 
                          IsItemClickEnabled="True" 
                          ItemClick="OnFavoriteItemClick">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:ManagedFolder">
                            <Border Width="220" Height="80" 
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1" CornerRadius="4" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Glyph="&#xE8B7;" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{x:Bind StatusText}" FontSize="11" Opacity="0.6"/>
                                    </StackPanel>

                                    <!-- 快速备份按钮 -->
                                    <Button Grid.Column="2" Padding="6" Background="Transparent" BorderThickness="0" 
                                            Click="OnQuickBackupClick" x:Uid="HomePage_QuickBackupButton">
                                        <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <!-- 已移除模拟数据 -->
                </GridView>

                <!-- 空状态提示 -->
                <TextBlock x:Uid="HomePage_NoFavoriteFolders" Opacity="0.5" FontStyle="Italic"
                           Visibility="{x:Bind IsFavoritesEmpty, Mode=OneWay, Converter={StaticResource BoolToVisConverter}}"/>
            </StackPanel>

            <!-- 第二部分：配置概览 -->
            <StackPanel Spacing="12">
                <Grid>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                        <TextBlock x:Uid="HomePage_ConfigOverview" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Right" Style="{ThemeResource AccentButtonStyle}" Click="OnAddConfigClick">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;"/>
                            <TextBlock x:Uid="HomePage_NewConfig"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <GridView x:Name="ConfigGridView" 
                          ItemsSource="{x:Bind Configs, Mode=OneWay}"
                          SelectionMode="None" 
                          IsItemClickEnabled="True" 
                          ItemClick="OnConfigClick">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:BackupConfig">
                            <Border Width="300" Height="140"
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1" CornerRadius="8" Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <FontIcon Glyph="{x:Bind IconGlyph}" FontSize="30" Foreground="{ThemeResource AccentFillColorDefaultBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind Name}" VerticalAlignment="Center" Margin="12,0,0,0" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <FontIcon Grid.Column="2" Glyph="&#xE76C;" FontSize="12" Opacity="0.4"/>
                                    </Grid>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE946;" FontSize="12" Opacity="0.6"/>
                                        <TextBlock Text="{x:Bind SummaryText}" FontSize="12" Opacity="0.6"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
