<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FolderRewind.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Padding="32">
        <StackPanel Spacing="32">

            <!-- 第一部分：收藏的文件夹 (快速入口) -->
            <StackPanel Spacing="12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE735;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                    <TextBlock Text="收藏的文件夹" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </StackPanel>

                <GridView SelectionMode="None" IsItemClickEnabled="True" ItemClick="OnFavoriteClick">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="models:ManagedFolder">
                            <Border Width="200" Height="80" 
                                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1" CornerRadius="4" Padding="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- 简单的图标示意 -->
                                    <FontIcon Glyph="&#xE8B7;" FontSize="24" VerticalAlignment="Center" Margin="0,0,12,0"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind DisplayName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{x:Bind StatusText}" FontSize="11" Opacity="0.6"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" Padding="4" Background="Transparent" BorderThickness="0" ToolTipService.ToolTip="立即备份">
                                        <FontIcon Glyph="&#xE896;" FontSize="14"/>
                                        <!-- Sync/Backup Icon -->
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <!-- 模拟数据 -->
                    <models:ManagedFolder DisplayName="关键文档" StatusText="准备就绪"/>
                    <models:ManagedFolder DisplayName="毕业论文" StatusText="同步中..."/>
                </GridView>
            </StackPanel>

            <!-- 第二部分：配置概览 -->
            <StackPanel Spacing="12">
                <!-- 标题行：找回了添加按钮 -->
                <Grid>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;" Foreground="{ThemeResource SystemControlForegroundAccentBrush}"/>
                        <TextBlock Text="配置概览" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                    </StackPanel>

                    <!-- 添加配置按钮 -->
                    <Button HorizontalAlignment="Right" Style="{ThemeResource AccentButtonStyle}" Click="OnAddConfigClick">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE710;"/>
                            <TextBlock Text="新建配置"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- 配置列表绑定 -->
                <GridView x:Name="ConfigGridView" 
              ItemsSource="{x:Bind Configs, Mode=OneWay}"
              SelectionMode="None" 
              IsItemClickEnabled="True" 
              ItemClick="OnConfigClick">
                    <GridView.ItemTemplate>
                        <!-- 在 Page.Resources 中 -->
                        <DataTemplate x:DataType="models:BackupConfig">
                            <Border Width="300" Height="140"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1" CornerRadius="8" Padding="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 修复图标显示：移除之前的复杂Grid，简化结构 -->
                                        <Ellipse Width="40" Height="40" Fill="{ThemeResource AccentFillColorTertiaryBrush}"/>
                                        <FontIcon Glyph="{x:Bind IconGlyph}" FontSize="20" Foreground="{ThemeResource AccentFillColorDefaultBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1" Text="{x:Bind Name}" VerticalAlignment="Center" Margin="12,0,0,0" Style="{ThemeResource BodyStrongTextBlockStyle}"/>

                                        <!-- 悬停提示箭头 -->
                                        <FontIcon Grid.Column="2" Glyph="&#xE76C;" FontSize="12" Opacity="0.4"/>
                                    </Grid>

                                    <!-- Footer Info -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="&#xE946;" FontSize="12" Opacity="0.6"/>
                                        <TextBlock Text="{x:Bind SummaryText}" FontSize="12" Opacity="0.6"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>

