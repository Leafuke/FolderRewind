<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="FolderRewind.Views.ConfigurationSettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="配置设置"
    PrimaryButtonText="保存"
    CloseButtonText="取消"
    DefaultButton="Primary">

    <Grid Width="450" Height="400">
        <Pivot>
            <PivotItem Header="常规">
                <StackPanel Spacing="16" Padding="0,12">
                    <TextBox Header="名称" Text="新配置"/>
                    <TextBox Header="目标路径" PlaceholderText="D:\Backups"/>
                </StackPanel>
            </PivotItem>
            <PivotItem Header="策略">
                <StackPanel Spacing="16" Padding="0,12">
                    <Slider Header="压缩等级" Minimum="0" Maximum="9" Value="5"/>
                    <ToggleSwitch Header="加密备份" IsOn="False"/>
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</ContentDialog>
