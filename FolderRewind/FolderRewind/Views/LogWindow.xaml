<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FolderRewind.Views.LogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Uid="LogWindow"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Grid Background="{ThemeResource LayerFillColorAltBrush}" Padding="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Uid="LogWindow_ClearLog" Click="OnClearClick"/>
                <CheckBox x:Uid="LogWindow_AutoScroll" IsChecked="True" x:Name="AutoScrollCheck"/>
            </StackPanel>
        </Grid>

        <!-- 日志显示区域 -->
        <RichEditBox x:Name="LogBox" Grid.Row="1" IsReadOnly="True" 
                     FontFamily="Consolas, Courier New" FontSize="14"
                     BorderThickness="0" Margin="4"/>
    </Grid>
</Window>
