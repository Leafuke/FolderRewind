<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FolderRewind.Views.FolderManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:FolderRewind.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 顶部操作栏 -->
        <Grid Padding="24,16" Background="{ThemeResource LayerFillColorAltBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 快速切换配置 -->
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="当前配置:" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <ComboBox x:Name="ConfigSelector" Width="200" SelectedIndex="0">
                    <ComboBoxItem Content="工作项目备份"/>
                    <ComboBoxItem Content="个人照片归档"/>
                </ComboBox>
            </StackPanel>

            <!-- 右侧操作 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <Button>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;"/>
                        <TextBlock Text="添加文件夹"/>
                    </StackPanel>
                </Button>
                <Button Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE896;"/>
                        <TextBlock Text="立即备份配置"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 文件夹大列表 -->
        <ListView Grid.Row="1" Padding="12" SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ManagedFolder">
                    <Grid Margin="0,8" Padding="12" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- 图片 -->
                            <ColumnDefinition Width="*"/>
                            <!-- 信息 -->
                            <ColumnDefinition Width="200"/>
                            <!-- 状态 -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- 操作 -->
                        </Grid.ColumnDefinitions>

                        <!-- 1. 可点击更换的图片区域 -->
                        <Button Padding="0" CornerRadius="8" Width="72" Height="72" BorderThickness="0" Background="Transparent" ToolTipService.ToolTip="点击更换封面">
                            <Grid>
                                <!-- 实际应绑定 Image Source={x:Bind ImagePath} -->
                                <Border Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" CornerRadius="8">
                                    <FontIcon Glyph="&#xE8B9;" FontSize="32" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </Border>
                                <!-- Hover hint (可选) -->
                                <Border VerticalAlignment="Bottom" Background="#80000000" Height="20" CornerRadius="0,0,8,8">
                                    <TextBlock Text="编辑" FontSize="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Button>

                        <!-- 2. 信息区域 -->
                        <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center" Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind DisplayName}" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                                <!-- 收藏按钮 -->
                                <ToggleButton IsChecked="{x:Bind IsFavorite, Mode=TwoWay}" Padding="4" Background="Transparent" BorderThickness="0">
                                    <FontIcon Glyph="{x:Bind IsFavorite, Converter={StaticResource BoolToStarIconConverter}}" 
                                              Foreground="{x:Bind IsFavorite, Converter={StaticResource BoolToColorConverter}}"/>
                                </ToggleButton>
                            </StackPanel>

                            <!-- 路径 -->
                            <TextBlock Text="{x:Bind FullPath}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                            <!-- 描述 (可编辑) -->
                            <TextBox Text="{x:Bind Description, Mode=TwoWay}" 
                                     PlaceholderText="添加描述..." 
                                     BorderThickness="0" Background="Transparent" 
                                     Padding="0" Margin="-8,0,0,0"
                                     FontStyle="Italic" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- 3. 状态与时间 -->
                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind StatusText}" Foreground="Green" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind LastBackupTime}" FontSize="12" Opacity="0.6"/>
                        </StackPanel>

                        <!-- 4. 操作菜单 -->
                        <Button Grid.Column="3" Background="Transparent" BorderThickness="0" Padding="8">
                            <FontIcon Glyph="&#xE712;"/>
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="浏览文件夹" Icon="Folder"/>
                                    <MenuFlyoutItem Text="强制重新扫描" Icon="Refresh"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="从配置中移除" Icon="Delete" Foreground="Red"/>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <!-- 模拟数据 -->
            <models:ManagedFolder DisplayName="Design Assets" FullPath="D:\Work\Assets" Description="包含所有PSD和AI文件" IsFavorite="True"/>
            <models:ManagedFolder DisplayName="Screenshots" FullPath="C:\Users\Admin\Pictures\Screenshots" Description="自动截图归档"/>
        </ListView>
    </Grid>
</Page>
